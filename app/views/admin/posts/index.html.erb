<h1>Posts</h1>

<p><%= link_to "New", new_admin_post_path %></p>

<% if @posts.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Slug</th>
        <th>Published</th>
        <th>Tags</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.slug %></td>
        <td><%= post.published %></td>
        <td><%= post.tag_list %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= link_to 'Show', admin_post_path(post) %>
          <%= link_to 'Edit', edit_admin_post_path(post) %>
          <%= link_to 'Delete', admin_post_path(post), :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="notice">No posts.</div>
<% end %>

<%= paginate @posts %>
