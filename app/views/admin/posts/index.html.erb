<h1>List of Posts</h1>

<%= link_to "New", new_admin_post_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Slug</th>
      <th>Body</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.slug %></td>
      <td><%= post.body %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td>
        <%= link_to 'Show', admin_post_path(post) %>
        <%= link_to 'Edit', edit_admin_post_path(post) %>
        <%= link_to 'Delete', admin_post_path(post), :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @posts %>
