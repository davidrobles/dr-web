<h1>Projects</h1>

<%= link_to "New", new_admin_project_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Slug</th>
      <th>Body</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
    </tr>
  </thead>
<% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= project.title %></td>
    <td><%= project.slug %></td>
    <td><%= project.body %></td>
    <td><%= project.created_at %></td>
    <td><%= project.updated_at %></td>
    <td>
      <%= link_to 'Show', admin_project_path(project) %>
      <%= link_to 'Edit', edit_admin_project_path(project) %>
      <%= link_to 'Delete', admin_project_path(project), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<%= paginate @projects %>
