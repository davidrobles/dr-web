<h1>Tags</h1>

<p><%= link_to "New", new_admin_tag_path %></p>

<% if @tags.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Slug</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>
    </thead>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.name %></td>
        <td><%= tag.slug %></td>
        <td><%= tag.created_at %></td>
        <td><%= tag.updated_at %></td>
        <td>
          <%= link_to 'Show', admin_tag_path(tag) %>
          <%= link_to 'Edit', edit_admin_tag_path(tag) %>
          <%= link_to 'Delete', admin_tag_path(tag), :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="notice">No tags.</div>
<% end %>

<%= paginate @tags %>
